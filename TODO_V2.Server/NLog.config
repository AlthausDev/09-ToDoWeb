<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Trace"
      internalLogFile="c:\temp\nlog-internal.log">

	<targets>
		<target xsi:type="File"
                name="logfile"
                fileName="${basedir}/logs/log-api-${shortdate}.txt"
                layout="${longdate} [${level:uppercase=true}] ${message}"
                archiveEvery="Day"
                archiveNumbering="Rolling"
                maxArchiveFiles="7"
                concurrentWrites="true"/>

		<target xsi:type="File"
                name="logfilextended"
                fileName="${basedir}/logs/Elog-api-${shortdate}.txt"
                layout="${longdate} [${level:uppercase=true}] ${callsite} ${message}"
                archiveEvery="Day"
                archiveNumbering="Rolling"
                maxArchiveFiles="7"
                concurrentWrites="true"/>

		<target xsi:type="File"
			   name="jsonLogFile"
			   fileName="${basedir}/logs/json-log-${shortdate}.txt"
			   layout="${message}"
			   archiveEvery="Day"
			   archiveNumbering="Rolling"
			   maxArchiveFiles="7"
			   concurrentWrites="true"/>
		
		
		<target xsi:type="Database"
				name="database"
				connectionString="${configsetting:item=ConnectionStrings.TODO_V2DB}">

			<commandText>
				INSERT INTO [dbo].[Log] (
				[MachineName],
				[Logged],
				[Level],
				[Message],
				[Logger],
				[Request_method],
				[Stacktrace],
				[File_name],
				[All_event_properties],
				[Log_exception]
				) VALUES (
				@machineName,
				@logged,
				@level,
				@message,
				@logger,
				@request_method,
				@stacktrace,
				@filename,
				@alleventproperties,
				@log_exception
				);
			</commandText>
			<parameter name="@machineName" layout="${machinename}"/>
			<parameter name="@logged" layout="${date}"/>
			<parameter name="@level" layout="${level:uppercase=true}"/>
			<parameter name="@message" layout="${message}"/>
			<parameter name="@logger" layout="${logger}"/>
			<parameter name="@request_method" layout="${aspnet-request-method}"/>
			<parameter name="@stacktrace" layout="${stacktrace}" />
			<parameter name="@filename" layout="${callsite:filename=true}"/>
			<parameter name="@alleventproperties" layout="${all-event-properties}"/>
			<parameter name="@log_exception" layout="${exception}"/>
		</target>

		<target xsi:type="WebService"
			   name="webservice"
			   url="https://localhost:7216/api/log"
			   protocol="JsonPost"
			   encoding="UTF-8">
			<parameter name="MachineName" layout="${machinename}" />
			<parameter name="Logged" layout="${date:format=o}" />
			<parameter name="Level" layout="${level:uppercase=true}" />
			<parameter name="Message" layout="${message}" />
			<parameter name="Logger" layout="${logger}" />
			<parameter name="Request_method" layout="${aspnet-request-method}" />
			<parameter name="Stacktrace" layout="${stacktrace}" />
			<parameter name="File_name" layout="${callsite-filename}" />
			<parameter name="All_event_properties" layout="${all-event-properties}" />
			<parameter name="Log_exception" layout="${exception}"/>
		</target>
	</targets>
	

	<rules>
		<logger name="TODO_V2.Server.RequestLoggingMiddleware" minlevel="Info" writeTo="database" />
		<logger name="TODO_V2.Server.RequestLoggingMiddleware" minlevel="Info" writeTo="webservice" />
		<logger name="TODO_V2.Server.RequestLoggingMiddleware" minlevel="Info" writeTo="logfile" />		 
		<logger name="TODO_V2.Server.RequestLoggingMiddleware" minlevel="Debug" writeTo="logfilextended" final="true" />		
	</rules>
</nlog>
