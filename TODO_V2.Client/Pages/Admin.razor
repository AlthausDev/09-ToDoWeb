@page "/admin/{Id}"
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager NavManager
@inject ILocalStorageService storageService

<PageTitle>TODO APP</PageTitle>

<Modal @ref="ModalInstance" Size="ModalSize.Regular" ShowCloseButton="false" UseStaticBackdrop="true" IsVerticallyCentered="true" />
<div class="mainContainer">
    <div class="NavButtons">
        <button type="button" class="button-style" @onclick="OnClickShowCategories">Gestión Categorias</button>
        <button type="button" class="button-style" @onclick="OnClickShowUsers">Gestión Usuarios</button>
        <button type="button" class="button-style" @onclick="OnClickShowTodoList">Tareas</button>
        <button type="button" class="button-style" @onclick="OnClickLogOut">Cerrar Sesion</button>

    </div>

    <div class="container">
        <div class="usersContainer">
            <UsersMannager/>     
        </div>

        <div class="categoriesContainer">
            <CategoryMannager/>
        </div>

        <div class="todoContainer">
            <Todo Id="@Id" />
        </div>
    </div>
</div>

<style>

    .NavButtons{
        margin: 1%;

        .btn{

        }
    }

    /*TODO Modificar style*/
    .container{
        position: fixed;
        border: solid 2px black;
        height: 88%;
        padding: 2%;
        margin: 1%;
        min-width: -webkit-fill-available;
        

        .usersContainer{
            display: @ShowUsersMannager;
        }
    
        .categoriesContainer{
            display: @ShowCategoriesMannager;
        }

